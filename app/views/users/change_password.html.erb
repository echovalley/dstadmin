<div class="fullwidth">  
  <%#= render 'advertisers/quick_link' %>
  <div class="ad_right">
    <%= notice_div %>
    <h1>修改密码</h1>
    <div class="data_chart">
      <%= form_tag(update_password_user_path, :id => 'frmChangePwd', :method => :put) do %>
        <ul>
          <li><label>当 前 账 号</label><%= @user.email %></li>
          <li><label>旧 密 码</label><%= password_field_tag 'old_password' %></li>
          <li><label>新 密 码</label><%= password_field_tag 'new_password' %></li>
          <li><label>确 认 密 码</label><%= password_field_tag 'confirm_password' %></li>
          <li><label></label><%= submit_tag '修 改', :class => 'btn_green size-max' %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $("form").validate({
      //debug: true,
      rules: {
        'old_password': { required: true, minlength: 6 },
        'new_password': { required: true , minlength: 6 },
        'confirm_password': { required: true, equalTo: "#new_password" }
      }
    });
  });
</script>
<%= notice_javascript %>
